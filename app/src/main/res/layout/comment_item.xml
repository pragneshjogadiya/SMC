<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"
    android:paddingLeft="5dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/comment_cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="7dp"
            android:paddingBottom="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Pragnesh Jogadiya"
                android:layout_toRightOf="@+id/comment_icon_of_commentator"
                android:singleLine="true"
                android:id="@+id/comment_name_of_commentator"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/comment_name_of_commentator"
                android:text="5 min ago"
                android:layout_toRightOf="@+id/comment_name_of_commentator"
                android:singleLine="true"
                android:id="@+id/comment_time_of_comment"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="This is first comment"
                android:layout_alignLeft="@+id/comment_name_of_commentator"
                android:layout_below="@+id/comment_name_of_commentator"
                android:layout_marginTop="7dp"
                android:id="@+id/comment_text" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="Pragnesh Jogadiya"
                android:layout_centerVertical="true"
                android:id="@+id/comment_icon_of_commentator"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>