<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="5dp"
    >

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_action_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Medium Text"
            android:textStyle="bold"
            android:maxLines="2"
            android:id="@+id/job_title_tv"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/job_due_tv"

            android:layout_below="@+id/job_title_tv"
            android:layout_alignLeft="@+id/job_title_tv"
            android:layout_alignStart="@+id/job_title_tv"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/job_type_tv"
            android:layout_alignBottom="@+id/job_due_tv"
            android:layout_toRightOf="@+id/job_due_tv"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/action_owner_tv"
            android:layout_alignBottom="@+id/job_type_tv"
            android:layout_toRightOf="@+id/job_type_tv"
            android:layout_marginLeft="10dp" />
        <View
            android:layout_width="7dp"
            android:layout_height="100dp"
            android:id="@+id/action_status_view"
            android:background="#6fdc6f"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>