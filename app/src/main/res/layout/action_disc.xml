<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="52dp"
    tools:context="com.example.saurabh.smc.AgendaDiscription">

    <!-- TODO: Update blank fragment layout -->



    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:id="@+id/agenda_disc_title_lay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_marginRight="10dp"



        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Title: "
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:id="@+id/Title"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"


            android:id="@+id/agenda_disc_titleeditText"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/Title"
            android:layout_toEndOf="@+id/Title" />
    </RelativeLayout>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px"/>




    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/agenda_disc_title_lay"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Discription :"
            android:id="@+id/agenda_dis_disc"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/agenda_disc_editText"
            android:hint="Type here"
            android:background="#00000000"
            android:layout_below="@+id/agenda_dis_disc"
            android:layout_alignLeft="@+id/agenda_dis_disc"
            android:layout_alignStart="@+id/agenda_dis_disc"
            android:layout_marginLeft="43dp"
            android:layout_marginStart="43dp"
            android:layout_marginTop="5dp"
            android:maxLines="4"/>

    </RelativeLayout>


    <include layout="@layout/fragment_test"
        android:layout_below="@+id/relativeLayout"
        android:layout_height="270dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="10dp"

        android:id="@+id/add_action_layout_agenda_disc"/>


    <RelativeLayout
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="bottom"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:id="@+id/comment_agenda_disc_view"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:onClick="showComment"
        android:layout_alignParentRight="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add a comment..."
            android:layout_centerVertical="true"
            android:id="@+id/agenda_disc_add_comment_textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"

            android:layout_centerVertical="true"
            android:id="@+id/add_comment_agenda_disc_imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


</RelativeLayout>