<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="com.example.saurabh.smc.fragements.NewActionFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:ems="10"
        android:hint="Action Title"
        android:background="@drawable/back"
        android:gravity="center"

        android:id="@+id/new_act_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />



    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/border"
        android:id="@+id/relativeLayout"
        android:layout_below="@+id/new_act_title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView2"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due date:"
            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#000"
            android:textSize="18sp"
            android:id="@+id/textView5"

            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />
    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/relativeLayout"
        android:background="@drawable/border"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/relativeLayout1">


        <Spinner
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mem_gender_spinner"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:drawSelectorOnTop="true"


            android:entries="@array/action_type"



            >

        </Spinner>


    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/relativeLayout1"
        android:background="@drawable/back2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/relativeLayout2">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Assign task to.."
            android:id="@+id/new_act_owner"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Tab here to select which contact to assign."
            android:id="@+id/new_act_owner_dis"
            android:layout_below="@+id/new_act_owner"
            android:layout_marginTop="6dp"
            android:layout_alignLeft="@+id/new_act_owner"
            android:layout_alignStart="@+id/new_act_owner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000"
            android:id="@+id/act_owner"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/new_act_owner_dis"
            android:layout_toRightOf="@+id/new_act_owner"
            android:layout_toEndOf="@+id/new_act_owner" />
    </RelativeLayout>

    <Button style="@style/Widget.AppCompat.Button.Colored"

        android:layout_width="match_parent"
        android:layout_height="55dp"


        android:layout_marginTop="46dp"
        android:layout_marginRight="10dp"

        android:text="Add New Action"
        android:id="@+id/add_action_button"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignStart="@+id/relativeLayout2" />

</RelativeLayout>
